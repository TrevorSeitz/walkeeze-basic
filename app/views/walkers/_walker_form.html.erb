<%= form_for :user, url: '/walkers/register', :html => {class: "new_user"} do |f| %>
  <div class="row">
    <div class="column6" id="log-in">
      <p>
        Become a Walkeeze Walker!!
        </p>
      <div class="new_user_form">
        <br />
        Name: <%= f.text_field :name %><br>
        Email: <%= f.text_field :email %><br>
        Password: <%= f.password_field  :password %><br>
        Confirm:  <%= f.password_field  :password_confirmation %><br>

        <%= hidden_field_tag(:walker, true) %>

        <div class="actions"><%= submit_tag "Register" %></div>
      </div>
    </div>
  </div>
<% end %>
